<?xml version="1.0" encoding="UTF-8"?>

<web-app
    xmlns="http://xmlns.jcp.org/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="
        http://xmlns.jcp.org/xml/ns/javaee
        http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
    version="4.0">

    <!-- ========================= -->
    <!-- Application Name -->
    <!-- ========================= -->
    <display-name>FitnessTrainingPlatform</display-name>

    <!-- ========================= -->
    <!-- Welcome Page -->
    <!-- ========================= -->
    <welcome-file-list>
        <welcome-file>jsp/login.jsp</welcome-file>
    </welcome-file-list>

    <!-- ========================= -->
    <!-- Login Servlet -->
    <!-- ========================= -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>
            com.fitness.controller.LoginServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <!-- ========================= -->
	<!-- Logout Servlet -->
	<!-- ========================= -->
	<servlet>
	    <servlet-name>LogoutServlet</servlet-name>
	    <servlet-class>
	        com.fitness.controller.LogoutServlet
	    </servlet-class>
	</servlet>
	
	<servlet-mapping>
	    <servlet-name>LogoutServlet</servlet-name>
	    <url-pattern>/logout</url-pattern>
	</servlet-mapping>
    
    <!-- ========================= -->
    <!-- Admin: Workout Approval -->
    <!-- ========================= -->
    <servlet>
        <servlet-name>WorkoutApprovalServlet</servlet-name>
        <servlet-class>
            com.fitness.controller.admin.WorkoutApprovalServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WorkoutApprovalServlet</servlet-name>
        <url-pattern>/admin/approveWorkout</url-pattern>
    </servlet-mapping>

    <!-- ========================= -->
    <!-- Trainer: Create Workout Plan -->
    <!-- ========================= -->
    <servlet>
        <servlet-name>WorkoutPlanServlet</servlet-name>
        <servlet-class>
            com.fitness.controller.trainer.WorkoutPlanServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WorkoutPlanServlet</servlet-name>
        <url-pattern>/trainer/createPlan</url-pattern>
    </servlet-mapping>

    <!-- ========================= -->
    <!-- User: Progress Tracking -->
    <!-- ========================= -->
    <servlet>
        <servlet-name>ProgressServlet</servlet-name>
        <servlet-class>
            com.fitness.controller.user.ProgressServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ProgressServlet</servlet-name>
        <url-pattern>/user/progress</url-pattern>
    </servlet-mapping>

</web-app>
